<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.beersoft.Maps"
        version   = "1.0.0">
	<name>GeoLocalizacion</name>
	<description>
  Mostrar mapa con el plugin  cordova-plugin-googlemaps
  </description>
	<author email="beer.soft@outlook.com" href="http://beersoft.com">
		Diego Luna
	</author>
	<gap:plataform name="android" />
	<preference name="orientation" value="portrait" />
	<preference name="fullscreen" value="false" />
	<preference name="android-installLocation" value="auto" />

	<content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
	<access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
  </platform>

  <preference name="phonegap-version" value="cli-8.0.0" />
  <preference name="android-minSdkVersion" value="19" />
  <plugin name="cordova-plugin-googlemaps">
    <variable name="API_KEY_FOR_ANDROID" value="AIzaSyBXRAY2jPrFUY-YYy4Y76UMu9_ODY-e1Bo" />
    <variable name="API_KEY_FOR_IOS" value="AIzaSyBXRAY2jPrFUY-YYy4Y76UMu9_ODY-e1Bo" />
  </plugin>
  <plugin name="cordova-plugin-geolocation" spec="~2.4.0" />
  <engine name="ios" spec="^4.5.5" />
  <engine name="android" spec="^7.0.0" />
  <engine name="browser" spec="~5.0.4" />
	
</widget>